%h2 Michigan Quarterly Review Subscription
%p
  = current_application_settings.subscription_directions

  = form_for @application do |f|
    .h6
      = f.check_box :subscription
      = f.label 'Check to add this subscription'
    .actions
      = f.submit 'Update', class: 'btn btn-success', name: "update_subscription", value: "update"

= link_to 'Back', all_payments_path, class: "btn btn-sm btn-secondary"
